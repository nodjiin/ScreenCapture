            new RemoteAgent("t2", "t2"),
            new RemoteAgent("t2", "t2"),
            new RemoteAgent("t2", "t2"),
            new RemoteAgent("t2", "t2"),
            new RemoteAgent("t2", "t2"),
            new RemoteAgent("t2", "t2"),
        };

        base.OnInitialized();
    }
}
