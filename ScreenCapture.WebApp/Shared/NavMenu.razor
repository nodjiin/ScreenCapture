<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Screen Capture</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <i class="bi bi-house-fill fs-4 ps-2 pe-2"></i> Home
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/Archive/Video">
                        <i class="bi bi-cassette fs-4 ps-2 pe-2"></i> Video
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/Archive/Screenshot">
                        <i class="bi bi-images fs-4 ps-2 pe-2"></i> Screenshot
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    @* TODO wrap the scaffolded identity page in the application *@
                    <NavLink class="nav-link" href="Identity/Account/Manage">
                        <i class="bi bi-person-circle fs-4 ps-2 pe-2"></i> Account
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/Options">
                        <i class="bi bi-gear fs-4 ps-2 pe-2"></i> Options
                    </NavLink>
                </div>
            </Authorized>
            <NotAuthorized>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
