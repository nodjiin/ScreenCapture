{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "SettingsGroupsConfiguration": {
    "video": {
      "Name": "Video Recording",
      "Settings": {
        "draw_mouse": {
          "Name": "Draw Mouse",
          "Description": "Specify whether to draw the mouse pointer. Enabled by default.",
          "Type": "Boolean",
          "DefaultValue": "true"
        },
        "framerate": {
          "Name": "Framerate",
          "Description": "Set the grabbing frame rate. Default value is ntsc, corresponding to a frame rate of 30000/1001.",
          "Type": "Open",
          "DefaultValue": "ntsc"
        },
        "show_region": {
          "Name": "Show Region",
          "Description": "Show grabbed region on screen. Enabled by default.",
          "Type": "Boolean",
          "DefaultValue": "true"
        },
        "video_size": {
          "Name": "Video Size",
          "Description": "Set the video frame size. Leave it empty to capture the full screen (or window if title='window title' is selected).",
          "Type": "Fixed",
          "DefaultValue": "",
          "PossibleValues": [
            "",
            "320×200",
            "320×240",
            "400×240",
            "480×320",
            "640×200",
            "640×350",
