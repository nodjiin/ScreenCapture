        },
        "offset_x": {
          "Name": "Window Title",
          "Description": "Set the title of a specific window to capture. By default the whole desktop will be recorded.",
          "Type": "Open"
        },
        "offset_y": {
          "Name": "Offset X",
          "Description": "When capturing a region with video size, set the distance from the left edge of the screen or desktop.",
          "Type": "Open",
          "DefaultValue": "0"
        },
        "window_title": {
          "Name": "Offset Y",
          "Description": "When capturing a region with video size, set the distance from the top edge of the screen or desktop.",
          "Type": "Open",
          "DefaultValue": "0"
        }
      }
    },
    "screenshot": {
      "Name": "Screenshot",
      "Settings": {
        "image_format": {
          "Name": "Image Format",
          "Description": "The image format the screenshot will be saved in.",
          "Type": "Fixed",
          "DefaultValue": "jpeg",
          "PossibleValues": [
            "jpeg",
            "png",
            "bmp"
          ]
        }
      }
    }
  }
